<div class="product-details">
  {{!-- Header --}}
  <h3>{{@name}}</h3>
  <div class="text-warning">
    <i class="fa-solid fa-star"></i>
    <i class="fa-solid fa-star"></i>
    <i class="fa-solid fa-star"></i>
    <i class="fa-solid fa-star"></i>
    <i class="fa-solid fa-star-half-stroke"></i>
  </div>
  {{!-- Price --}}
  <section>
    <del class="small text-black-50">${{@price.original}}</del>
    <i class="text-danger font-weight-bold">${{@price.current}}</i>
  </section>

  <div>
    <h5>Color</h5>
    <div class="product-colors active-{{@color}}">
      {{#each @colors as |colorInfo|}}
        <span class="product-color {{concat 'color-' colorInfo.color}}" {{on "click" (fn @onChangeColor colorInfo.color)}}></span>
      {{/each}}
    </div>
  </div>
</div>
